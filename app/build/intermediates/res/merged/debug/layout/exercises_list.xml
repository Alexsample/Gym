<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/steele_fon"
    tools:context="com.alex.gymwork.ExercisesListActivity" >

    <TextView
        android:id="@+id/textview_exercises_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/title_exercises_list"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f0f0f0"
        android:textSize="24sp" />
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff005090" >
    </RelativeLayout>
    
    <Button
        android:id="@+id/button_add_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/add_exercise" />

    <ListView
        android:id="@+id/listview_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_add_exercise"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_exercises_list_title"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice" >

    </ListView>
	
</RelativeLayout>
